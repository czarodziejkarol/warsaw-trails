<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.warsaw_trails_spdb"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/noAnimTheme" >
        <activity
            android:name="com.example.warsaw_trails_spdb.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.warsaw_trails_spdb.NaviActivity"
            android:label="@string/title_activity_navi" >
        </activity>
        <activity
            android:name="com.example.warsaw_trails_spdb.TrailActivity"
            android:label="@string/title_activity_trail"
            android:parentActivityName="NaviActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="NaviActivity" />
        </activity>
    </application>

</manifest>
